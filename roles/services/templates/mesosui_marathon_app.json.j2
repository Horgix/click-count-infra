{
  "id": "mesos-ui",
  "instances": 1,
  "cpus": 0.2,
  "mem": 512,
  "constraints": [
    [
      "type",
      "CLUSTER",
      "svc"
    ]
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "capgemini/mesos-ui:standalone-latest",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "webui"
        }
      ]
    }
  },
  "env": {
    "ZOOKEEPER_ADDRESS": "{{ zk_nodes_with_port }}"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 15,
      "maxConsecutiveFailures": 10,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ]
}
